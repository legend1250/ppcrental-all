    <!--Bắt sự kiện scroll chuột xuống-->
    <script>
    
        $(window).scroll(function () {
            var st = $(this).scrollTop();
            if (st > 100) {
                $("#qa-top-menu").css("display", "none").fadeOut("slow");
                $("#site-header").addClass("site-menu-scroll");
                $("#site-header").css("background-color", "rgba(0,0,0,0.7)");
                $("#site-header").css("color", "white");
                $("#site-logo img").attr("src","../img/footer-logo.png")
            } else {
                $("#qa-top-menu").css("display", "normal").fadeIn("slow");
                $("#site-header").removeClass("site-menu-scroll");
                $("#site-header").css("background-color", "white");
                $("#site-header").css("color", "#333");
                $("#site-logo img").attr("src", "../img/logo.png")
            }
           
        });
    </script>
