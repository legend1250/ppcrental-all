<section class="header-block clearfix">
    <div class="inside clearfix">
        @RenderPage("~/Views/Shared/Layout/User/social.cshtml")
        <div class="call-info floatright clearfix"> 
            <span class="call-us"><i class="fa fa-phone"></i>Call us: 1-800-234-6789</span> 
            <a href="@Url.Action("Register","User")" id="registerfixed" class="register login">
                <i class="fa fa-pencil"></i>Register
            </a> 
            <a href="#login" class="login modal-popup" id="loginbtn">
                <i class="fa fa-sign-in"></i>Login
            </a>
        </div>
        <div id="login" class="zoom-anim-dialog mfp-hide">
            <form method="post" action="@Url.Action("Login","User")" id="homeland-loginform" name="homeland-loginform">
                <p class="login-username">
                    <label for="user_login">Username</label>
                    <input type="text" size="20" value="" class="input required" id="user_login" name="usrname">
                </p>
                <p class="login-password">
                    <label for="user_pass">Password</label>
                    <input type="password" size="20" value="" class="input required" id="user_pass" name="pwd">
                </p>
                <p class="login-remember">
                    <label>
                        <input type="checkbox" value="true" id="rememberme" name="rememberme"> Remember Me
                    </label>
                </p>
                <p class="login-submit">
                    <input type="submit" value="Log In" class="button-primary" id="wp-submit" name="wp-submit">
                </p>
            </form>
            <div class="login-links"> <a href="@Url.Action("Register","User")">Register</a> | <a href="@Url.Action("ForgotPassword","User")">Forgot your password?</a> </div>
        </div>
        <div id="register" class="zoom-anim-dialog mfp-hide">
            <form novalidate="novalidate" method="post" action="" id="homeland-registerform" name="homeland-registerform">
                <p class="login-username">
                    <label for="user_login">Username</label>
                    <input type="text" size="20" value="" class="input required" id="user_login" name="user_login">
                </p>
                <p>
                    <label for="user_email">Email</label>
                    <input type="text" size="25" value="" class="input required email" id="user_email" name="user_email">
                </p>
                <p id="reg_passmail"> Registration confirmation will be emailed to you. </p>
                <p class="login-submit">
                    <input type="submit" value="Register" class="button-primary" id="wp-submit" name="wp-submit">
                    <input type="hidden" value="" name="redirect_to">
                </p>
            </form>
            <div class="login-links"> <a href="#login" class="modal-popup">Login</a> | <a href="#lost-password" class="modal-popup">Lost your Password?</a> </div>
        </div>
        <div id="lost-password" class="zoom-anim-dialog mfp-hide">
            <form method="post" action="" id="homeland-lostpassword" name="homeland-lostpassword">
                <p>
                    <label for="user_login">Username or Email</label>
                    <input type="text" size="20" value="" class="input required" id="user_login" name="user_login">
                </p>
                <p> Please enter your username or email address. You will receive a link to create a new password via email. </p>
                <p class="login-submit">
                    <input type="submit" value="Get New Password" class="button-primary" id="wp-submit" name="wp-submit">
                    <input type="hidden" value="" name="redirect_to">
                </p>
            </form>
            <div class="login-links"> <a href="#register" class="modal-popup">Register</a> | <a href="#login" class="modal-popup">Login</a> </div>
        </div>
        
        
    </div>
</section>  