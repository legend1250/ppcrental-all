@model PPCRental.Driver.ViewModels    
@{
    ViewBag.Title = "Verify User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    if (Session["user"] == null)
    {
        Session["login-status"] = "NotLogin";
        Response.Redirect("~/User/Login", false);

    }
    else
    {
        string verify = Session["VerifyUser"] as String;
        if (!verify.Equals("NotVerify"))
        {
            Response.Redirect("~/User/Sercurity", false);
        }
    }

}
<style>
    .qa-security {      
        margin: auto;
        width: 50%;
        padding: 10px;
        min-height:400px;
    }
    .qa-security h1{
        margin-bottom: 50px;
    }
</style>
<div class="qa-security">
    <div class="row content">
        <div class="col-lg-12">
            <center><h1>Verify User</h1></center>
            <div class="form-group">
                <label>Security Question:</label>
                <div class="input-group" id="f-question">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-question-sign"></span></span>
                    <select id="question" class="form-control">
                        @{
                            foreach (var item in Model.zSecurity)
                            {
                                <option value="@item.id">@item.question</option>
                            }
                        }

                    </select>
                </div>
                <div class="form-group">
                    <label>Answer</label>
                    <div class="input-group" id="f-answer">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-comment"></span></span>
                        <input type="text" id="answer" name="answer" placeholder="Answer" class="form-control">
                    </div>
                </div>
                <input type="submit" name="submit" id="submit" value="Submit" class="btn btn-primary pull-right">
            </div>

        </div>
    </div>
</div>

