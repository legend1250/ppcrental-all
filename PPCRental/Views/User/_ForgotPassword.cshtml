
@{
    ViewBag.Title = "Fogot Password";
    Layout = "~/Views/Shared/_Layout_null.cshtml";
}

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Forgot Password - PPCRental</title>
    <link rel="shortcut icon" href="~/img/favicon.png" />
    <link rel='dns-prefetch' href='//s.w.org' />
    <link rel='stylesheet' href='~/Content/login-forgot-register.css' type='text/css' media='all' />
    <meta name='robots' content='noindex,follow' />
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="http://www.technicalkeeda.com/js/javascripts/plugin/jquery.js"></script>
    <script type="text/javascript" src="http://www.technicalkeeda.com/js/javascripts/plugin/jquery.validate.js"></script>
</head>

<body class="login login-action-lostpassword wp-core-ui  locale-en-us">
    <div id="login" style="width:500px">
        <h1><a href="~/Home/Index" title="Real Estate WordPress Theme" tabindex="-1">PPCRental</a></h1>
        <p class="message">Please enter your email address or username and secret question.</p>
        <form name="changePassword" id="changePassword" action="@Url.Action("forgotPassword","User")" method="post">
            <p>
                <label for="id">
                    Username or Email:
                    <br />
                    <input type="text" name="id" id="password" class="input" value="" size="20" />
                </label>
            </p>
            <p>
                <label>
                    Secret Question:
                    <br />
                    <select style="font-size:medium">
                        <option value="1">What was the house number and street name you lived in as a child?</option>
                        <option value="2">What were the last four digits of your childhood telephone number?</option>
                        <option value="3">What primary school did you attend?</option>
                        <option value="4">In what town or city was your first full time job?</option>
                        <option value="5">In what town or city did you meet your spouse/partner?</option>
                        <option value="6">What is the middle name of your oldest child?</option>
                        <option value="7">What are the last five digits of your driver's licence number?</option>
                        <option value="8">What is your grandmother's (on your mother's side) maiden name?</option>
                        <option value="9">What is your spouse or partner's mother's maiden name?</option>
                        <option value="10">In what town or city did your mother and father meet?</option>
                        <option value="11">What time of the day were you born? (hh:mm)</option>
                        <option value="12">What time of the day were you born? (hh:mm)</option>
                    </select>
                </label>
            </p>
            <p>
                <label for="answer">
                   Your Answer
                    <br />
                    <input type="text" name="answer" id="answer" class="input" value="" size="20" />
                </label>
            </p>
            <p class="submit">
                <input type="button" name="submit" id="submit" class="button button-primary button-large" value="Set New Password" onClick="validatePassword()" />
            </p>
        </form>
        <p id="nav">
            <a href="~/User/Login">Log in</a> | <a rel="nofollow" href="~/User/Register">Register</a>
        </p>
        <p id="backtoblog"><a href="~/Home/Index">&larr; Back to Home</a></p>
    </div>
    <link rel='stylesheet' id='homeland-custom-style-css' href='http://themecss.com/wp/Homeland/wp-content/themes/homeland/assets/css/admin.css?ver=4.8.3' type='text/css' media='all' />
    <style id='homeland-custom-style-inline-css' type='text/css'>
        body.login #login h1 a {
            background: url("../../img/logo.png") center top no-repeat transparent;
            background-size: 200px auto;
            width: 100%;
            height: 126px;
        }

        .error {
            border: 2px red solid;
        }
    </style>
    <div class="clear"></div>
</body>


